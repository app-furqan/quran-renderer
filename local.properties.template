# local.properties - Library paths for quran-renderer-android
# Copy this file and set the paths for your system

# Path to HarfBuzz source (justification branch from DigitalKhatt/harfbuzz)
harfbuzz.dir=/path/to/harfbuzz

# Path to Skia source (with pre-built libskia.so in out/<ABI>/)
skia.dir=/path/to/skia

# Path to VisualMetaFont source (for quran.cpp text data)
vmf.dir=/path/to/visualmetafont

# Android SDK
sdk.dir=/path/to/Android/Sdk
